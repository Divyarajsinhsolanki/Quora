<%#= t('.sign_up') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false }) do |f| %>
  <%#= bootstrap_devise_error_messages! %>

<%= render "devise/shared/error_messages", resource: resource %>



<section class="text-center">
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 150px;
        "></div>
  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Sign up now</h2>
          <form>
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">

                  <%= f.text_field :firstname, autofocus: true, class: 'form-control' %>
                  
                  <label class="form-label" for="form3Example1"
                  >    <%= f.label :firstname %></label>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <%= f.text_field :name, class: 'form-control' %>
                  <label class="form-label" for="form3Example2">    <%= f.label :lastname %>
                  </label>
                </div>
              </div>
            </div>

            <div class="form-outline mb-4">

                  <%= f.email_field :email, autocomplete: 'email', class: 'form-control' %>
                  <label class="form-label" for="form3Example3">    <%= f.label :email %>
              </label>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>            
              <label class="form-label" for="form3Example4">    <%= f.label :password %>
              </label>
            </div>

                  <div class="form-outline mb-4">

              <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
                  <label class="form-label" for="form3Example3">    <%= f.label :password_confirmation %>
                </label>
                    </div>

            <div class="form-check d-flex justify-content-center mb-4">
              
              <label class="form-check-label" for="form2Example33">
                 <%= f.label "Profile photo" %>
                <%= f.file_field :avatar %>
                </label>
            </div>

            <!-- Submit button -->
              <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  

            
          </form>
        </div>
      </div>
    </div>
<% end %>
<h4>
<%= render 'devise/shared/links' %></h4>
  </div>
</section>
