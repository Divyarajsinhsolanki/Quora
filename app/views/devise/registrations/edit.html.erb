<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10  gradient-custom-2">
        <div class="card rounded-3 text-black  align-items-center">
          <div class="row g-0">
              <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
              <%= form_for current_user, as: :user,  url: profile_path(current_user),  method: :put  do |f| %>
                <%= render 'layouts/error_messages', object: f.object %>  
                <div class="text-center">
                  
                   <h4 class="mt-1 mb-5 pb-1">Update your profile</h4>
                </div>

                <form>

                  <div class="form-outline mb-4">
                  <%= f.text_field :firstname, class: 'form-control' %>

                    <label class="form-label" for="form2Example11"><%= f.label :firstname %>
                  </label>
                  </div>

                  <div class="form-outline mb-4">
<%= f.text_field :name, class: 'form-control' %>
                    <label class="form-label" for="form2Example22"><%= f.label :lastname %>
</label>
                  </div>

 <div class="form-outline mb-4">
<%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
                    <label class="form-label" for="form2Example22"><%= f.label :email %>

</label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <a class="text-muted" href="#!">
                      	<% if @user.avatar.attached? %>
                  </a><%= image_tag current_user.avatar ,style: "width:50px; height:50px;" %>
								<%else%>
									<p>No profile image</p>
								<% end %>
                    <%= f.file_field :avatar %>

                  </div>
                  <div class="d-flex align-items-center justify-content-center pb-4">
                  
<%= f.submit "update", class: 'btn btn-primary' %>

                   </div>
                </form>
              </div>
            </div>
          
<% end %>

            <div class="col-lg-6">

              <div class="card-body p-md-5 mx-md-4">

                
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

                <div class="text-center">
                   <h4 class="mt-1 mb-5 pb-1">Update your password</h4>
                </div>

                <form>
                  <p></p>

                  <div class="form-outline mb-4">
                                 <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
                                 <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
                    <label class="form-label" for="form2Example11">  <%= f.label :password %></label>
                  </div>

                  <div class="form-outline mb-4">

               <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
            <label class="form-label" for="form2Example22">                <%= f.label :password_confirmation %>
                </label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">              

                   <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

            <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
                    
                  <label class="form-label" for="form2Example22">  
                     <%= f.label :current_password %> </label>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">                  

                    </p>
                <%= f.submit t('.update'), class: 'btn btn-primary' %>
                  </div>

<p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
<% end %>
                </form>

              </div>
            </div>              
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  


          

          


       








  
          
  