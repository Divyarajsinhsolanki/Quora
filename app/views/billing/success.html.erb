<div class="container">
  <div class="row">
    <div class="col-md-12 mt-4 text-center">
      <h2>You have to pay for asking questions </h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 mt-3 text-center">
    <h3>Now you need to choose your plan </h3>
  </div>
</div>
<!-- creating a form -->
<%=form_tag subscribe_path, method: :post do %>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 text-center">
    <div class="form-group">
      <select class="form-control" name="plan_id">    
            <option value="<%= @plans.third.id %>"><%= @plans.third.amount %> for  <%= @plans.third.interval %></option>
      </select>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
<div class="row">
  <div class="col-md-12 mt-2 text-center">
    <%= submit_tag 'Buy Now', class: "btn btn-primary" %>
  </div>
</div>
<% end %>
