<br><br><%= @question.question %>



<%= form_with(model: @answer, url: user_question_answers_path(current_user.id,question_id: @question.id),local: true ) do |f| %>


<%= f.label :answer %>
<%= f.text_field :answer %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :questions_id  value: params(:id) %>
<%= f.submit "add question" %>
<% end %>