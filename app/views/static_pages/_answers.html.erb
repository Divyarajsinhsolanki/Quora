<div id="allanswers">
	<% a=1 %>
<% @answers.each do |ans| %>






<div >
  <div class="card-body ">
    <h5 class="card-title">
				</h5>
				  <p class="card-text">

<div class="row">
	<div class="col-1.1">
<h5 style="text-align:left;">Answer	<%= a %>.</h5> </div>
<div class="col">
									<h5 style="text-align:left;"><%=  ans.answer.html_safe %></h5>
									</div>
						<% a += 1 %>				  
				  </div>

				  </p>
				  <p class="card-text"><small class="text-muted">

				  <p style="color: gray; text-align: right;"> 
				          <% if ans.user.avatar.attached? %>
				            <%= image_tag ans.user.avatar, style: "width:30px; height:30px;" %>
                	<% end %>
                              <%= ans.user.firstname %>
             <br> Posted <%= time_ago_in_words(ans.created_at) %> ago. 
           </p>
         
    	</small></p>
  	</div>
	</div>
		<% end %>


</div>